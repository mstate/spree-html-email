<table id="order_summary" class="split">
  <tr>
    <td><%=Spree.t("order_number_title")%></td>
    <td><%= order.number %></td>
  </tr>
  <tr class="alt">
    <td><%=Spree.t("payment_method")%> </td>
    <td><%= order.payments.collect {|p| p.payment_method.name }.join(', ') %></td>
  </tr>
  <tr class="alt">
    <td><%=Spree.t("shipping_method")%> </td>
    <td>
      <%= order.shipments.collect {|s| s.selected_shipping_rate.name }.join(', ') %>
    </td>
  </tr>
  <% if order.canceled? %>
    <tr>
      <td><%=Spree.t("status")%></td>
      <td><%=Spree.t("order_state.canceled")%></td>
    </tr>
  <% else %>
    <tr>
      <td><%=Spree.t("date")%></td>
      <td><%= l(order.completed_at, :format => :long) %></td>
    </tr>
  <% end %>
</table>

<table id="addresses">
  <tr>
    <td>
      <h2><span><%= Spree.t("billing_address") %></span></h2>
      <%= render :partial => 'spree/shared/email/address', :locals => {:address => order.bill_address} %>
    </td>
    <td>
      <h2><span><%= Spree.t(:shipping_address) %></span></h2>
      <%= render :partial => 'spree/shared/email/address', :locals => {:address => order.ship_address} %>
    </td>
  </tr>
</table>

<div class="spacer_15"> </div>
<h2><span><%= Spree.t(:order_details) %></span></h2>

<table id="order_details">
  <tbody id="line-items">
    <tr data-hook="order_details_line_items_headers">
      <th><%= Spree.t(:items_purchased) %></th>
      <th class="price number"><%= Spree.t(:price) %></th>
      <th class="qty number"><%= Spree.t(:qty) %></th>
      <th class="total number"><%= Spree.t(:total) %></th>
    </tr>
    <% order.line_items.each do |item| %>
      <tr data-hook="order_details_line_item_row" class="<%= cycle('', 'alt') %>">
        <td class="name">
          <%= item.variant.product.name %>
          <%= "(" + variant_options(item.variant) + ")" unless item.variant .option_values.empty? %>
        </td>
        <td class="price number"><%= number_to_currency(item.price) %></td>
        <td class="qty number"><%= item.quantity %></td>
        <td class="total number"><%= number_to_currency(item.price * item.quantity) %></td>
      </tr>
    <% end %>
  </tbody>
  <tbody id="subtotal" data-hook="order_details_subtotal">
    <tr id="subtotal-row">
      <td class="title" colspan="3">
        <%= Spree.t(:subtotal) %>
      </td>
      <td class="total number">
        <%= number_to_currency order.item_total %>
      </td>
    </tr>
  </tbody>
  <tbody id="order-charges" data-hook="order_details_adjustments">
    <% if order.checkout_steps.include?("delivery") && order.shipments.any? %>
      <tr class="total">
        <td class="title" colspan="3"><%= Spree.t(:shipping_total) %></td>
        <td class="total number"><%= Spree::Money.new(order.shipments.to_a.sum(&:cost), currency: order.currency).to_html %></td>
      </tr>

      <% if order.shipment_adjustments.exists? %>
          <% order.shipment_adjustments.promotion.eligible.group_by(&:label).each do |label, adjustments| %>
            <tr class="total">
              <td class="title" colspan="3">
                <%= label %>
              </td>
              <td class="total number">
                <%= Spree::Money.new(adjustments.sum(&:amount), currency: order.currency).to_html %>
              </td>
            </tr>
          <% end %>
      <% end %>
    <% end %>
    
    <% order.adjustments.eligible.each do |adjustment| %>
      <% next if  adjustment.source_type == "TaxRate" && adjustment.amount == 0 %>
      <tr class="total">
        <td class="title" colspan="3">
          <%= adjustment.label %>
        </td>
        <td class="total number">
          <%= number_to_currency adjustment.amount %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tbody id="order-total" data-hook="order_details_total">
    <tr class="total">
      <td class="title" colspan="3">
        <%= Spree.t(:order_total) %>
      </td>
      <td class="total number">
        <span id="order_total"><%= number_to_currency order.total %></span>
      </td>
    </tr>
  </tbody>
</table>